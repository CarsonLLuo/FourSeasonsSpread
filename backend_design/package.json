{
  "name": "四季牌阵-backend",
  "version": "1.0.0",
  "description": "四季牌阵 AI 智能分析后端服务 - 传统塔罗智慧与现代AI技术的完美结合",
  "main": "server.js",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ server.js",
    "lint:fix": "eslint src/ server.js --fix",
    "prettier": "prettier --write \"src/**/*.js\" \"*.js\"",
    "health-check": "curl -f http://localhost:3001/api/health || exit 1",
    "validate-env": "node -e \"require('dotenv').config(); console.log('Environment variables loaded successfully')\"",
    "docker:build": "docker build -t 四季牌阵-backend .",
    "docker:run": "docker run -p 3001:3001 --env-file .env 四季牌阵-backend"
  },
  "keywords": [
    "tarot",
    "塔罗牌",
    "四季牌阵",
    "AI分析",
    "占卜",
    "express",
    "nodejs",
    "aihubmix",
    "spiritual",
    "divination"
  ],
  "author": {
    "name": "Carson",
    "email": "your-email@example.com"
  },
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "axios": "^1.6.2",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "prettier": "^3.1.0",
    "@types/jest": "^29.5.8"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/test/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true,
      "es6": true,
      "jest": true
    },
    "extends": [
      "eslint:recommended",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "printWidth": 100
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-username/四季牌阵.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/四季牌阵/issues"
  },
  "homepage": "https://github.com/your-username/四季牌阵#readme"
}
