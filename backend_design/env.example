# 四季牌阵后端环境配置
# 复制此文件为 .env 并填入真实的配置值

# 服务器配置
PORT=3001
NODE_ENV=development

# 前端URL（CORS配置）
FRONTEND_URL=http://localhost:3000

# AI服务配置 (支持多种API类型)
# 选择AI服务类型: aihubmix, openai, claude, gemini, deepseek
AI_API_TYPE=aihubmix
AI_API_KEY=your_api_key_here
AI_MODEL=gpt-4o-mini

# AI服务参数
MAX_TOKENS=1500
TEMPERATURE=0.7
API_TIMEOUT=30000

# 备用：旧版aihubmix配置（保持兼容性）
AIHUBMIX_API_KEY=
AIHUBMIX_API_BASE_URL=https://aihubmix.com/v1
AIHUBMIX_MODEL=gpt-4o-mini

# 安全配置
CORS_ORIGIN=http://localhost:3000,http://localhost:5173
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=combined

# 可选：数据库配置（如果需要持久化）
# DATABASE_URL=mongodb://localhost:27017/tarot_readings
# DATABASE_NAME=tarot_analysis

# 可选：Redis配置（如果需要缓存）
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=
# SESSION_CACHE_TTL=3600

# 可选：文件存储配置
# UPLOAD_MAX_SIZE=10485760
# UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif

# 开发工具配置
DEBUG=false
ENABLE_API_DOCS=true
ENABLE_HEALTH_CHECK=true
